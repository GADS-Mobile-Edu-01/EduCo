<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.TextRegular" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="TextAppearance.TextBold" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>
    <style name="TextAppearance.BottomNav.Active" parent="TextAppearance.TextBold">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextAppearance.BottomNav.NonActive" parent="TextAppearance.TextBold">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
    <style name="TextAppearance.TextMedium" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/lato_medium</item>
    </style>
    <style name="TextAppearance.TextBlack" parent="TextAppearance.TextRegular">
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="TextInputLayout.FilledBox.Primary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textAppearance">@style/TextAppearance.TextMedium</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="startIconTint">@color/edit_color</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextRegular</item>
        <item name="hintTextColor">@color/textColorSecondary</item>
    </style>

    <style name="TextInputEditText.Padding.AutoComplete" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextInputBox.Primary.DropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="hintEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextRegular</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
                <item name="backgroundTint">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
    </style>


    <style name="Widget.MaterialComponents.Button.Outline" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">1dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.TextRegular</item>
    </style>

</resources>