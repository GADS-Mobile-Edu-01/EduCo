<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.educo">

    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".views.auth.SignUpActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".views.BaseActivity" />
        <activity android:name=".views.auth.ForgotPasswordActivity" />

        <activity
            android:name=".views.auth.WelcomeActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".views.auth.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.auth.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".views.main.MainActivity" />
    </application>

</manifest>